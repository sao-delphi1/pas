procedure TfmSettingGudang.BitBtn1Click(Sender: TObject);
begin
  inherited;
  if odLogo.Execute then
    begin
      DBImage1.Picture.LoadFromFile(odLogo.FileName);
      DBImage1.Refresh;
    end;
end;

procedure TfmSettingGudang.BitBtn2Click(Sender: TObject);
begin
  inherited;
  DBImage1.Picture.Bitmap := nil;
end;

end.

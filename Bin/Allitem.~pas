         +'                      Price,ModuleID) '
         +'              VALUES(:VoucherNo,:TempField,:TempField1,:TransDate,:WarehouseId,:ItemID,:FgTrans,:Qty,:TransUOM, '
         +'                     :Price,:ModuleID)');
      with Parameters do

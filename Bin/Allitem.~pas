         ParamByName('Currid').Value := CurrId;
         ParamByName('Rate').Value := Rate;
         ParamByName('ModuleID').Value  := ModuleID;
         ParamByName('TempField2').Value  := TempField2;
         ParamByName('SalesId').Value  := SalesID;
         ParamByName('Komisi').Value  := Komisi;
      end;
      result := ExecSQL;
   end;
end;


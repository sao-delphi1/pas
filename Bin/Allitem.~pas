          ParamByName('VoucherNo').Value  := VoucherNo;
          ParamByName('SourceNo').Value := SourceNo;
          ParamByName('Tempfield').Value := Tempfield;
          ParamByName('FgTrans').Value := FgTrans;
      end;
      Result := ExecSQL;
   end;
